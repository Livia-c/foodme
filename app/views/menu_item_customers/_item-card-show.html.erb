<div class="menu-item-card-mobile">
  <h3><%= @menu_item.name.capitalize %></h3>
  <div class="menu-item-card-mobile-image">
    <% if @menu_item.photos.attached?%>
      <% @menu_item.photos.each do |photo|%>
        <%=cl_image_tag photo.key %>
      <% end %>
    <% end %>
  </div>
  <p><%= @menu_item.description.capitalize %></p>
  <p><i class="fa-solid fa-pepper-hot"></i> <%= @menu_item.spiciness %></p>
