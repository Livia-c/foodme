        <div class="checkout-quantity">
          <p><%= @current_order.order_items.pluck(:quantity).sum %><p>
        </div>
        <%= "Go to checkout" %>
      </div>
      <div class="checkout-price">
        <% invoice_payment = '%.2f' % (@current_order.sub_total/100.0) %>
        <%= number_to_currency(invoice_payment, options = {precision: 2, unit: "â‚¬"}) %>
      </div>
    <% end %>
