<div class="container">
    <% menu_items.each do |item| %>
      <% if item.photos.attached?%>
        <% item.photos.each do |photo|%>
          <div class="col-6">
            <div class="rounded-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path photo.key, height: 800, crop: :fill %>'); height: 248px;
            background-size: cover;
            background-position: center;"></div>
          </div>
        <% end %>
      <% end %>
      <div class="shadow p-3 mb-5 bg-body rounded col-6">
        <p><strong>Category:</strong> <%= item.menu_item_type %></p>
        <p><strong>Name: </strong><%= item.name %></p>
        <p><strong>Description: </strong><%= item.description %></p>
        <p><strong>Spiciness level:</strong> <%= item.spiciness %></p>
        <div class="d-flex justify-content-between border-bottom">
        <p><strong>Cooking time:</strong> <%= item.cooking_time %> minutes</p>
        <p><strong>Price:</strong> <%= item.price %>â‚¬</p>
        </div>
        <div class= "mt-2 ">
          <%= link_to "Show details", menu_item_path(item), class: "btn btn-primary col-12 justify-content-end" %>
        </div>
      </div>
    <% end %>
</div>
