<div class="menu-item-cards">
  <% menu_items.each do |item| %>
    <div class="menu-item-card border m-4">
      <%= link_to menu_item_path(item) do %>
        <div class="menu-card-text">
          <p><strong>Name: </strong><%= item.name %></p>
          <p><strong>Category:</strong> <%= item.menu_item_type %></p>
          <p class="menu-item-description"><strong>Description: </strong><%= item.description %></p>
          <p><strong>Spiciness level:</strong> <%= item.spiciness %></p>
          <div class="d-flex justify-content-between">
            <p><strong>Cooking time:</strong> <%= item.cooking_time %> minutes</p>
            <p><strong>Price: </strong>â‚¬<%= '%.2f' % item.price%></p>
          </div>
        </div>
        <div class="menu-card-image">
          <% if item.photos.attached?%>
            <% item.photos.each do |photo|%>
              <%=cl_image_tag photo.key %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
