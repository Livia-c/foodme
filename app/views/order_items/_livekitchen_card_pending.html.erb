<div class="card-livekitchen">
  <div class="livekitchen-text">
    <div class="livekitchen-righttext">
      <% order.order_items.each do |item| %>
        <p><%= item.menu_item.name %> (<%= pluralize item.quantity, "portion" %>)</p>
      <% end %>
    </div>
    <div class="livekitchen-lefttext">
      <p>Order #<%= order.id %></p>
      <%# check how table number will display when no table nr is given %>
      <p>Table: <%= order.table_number || "takeaway"%></p>
    </div>
  </div>
  <%= button_to "Prep", order_path(order), method: :patch, class: "btn btn-primary btn-kitchen" %>
</div>
