<h2>Live Kitchen</h2>

<div container = "flex-column mt-5">
  <div class = "inline justify-content-center ">
    <% @menu_items.each do |item| %>
    <div class= "rounded-4 shadow-sm p-3 mb-5 bg-body rounded col-5 design ">
      <p><strong><%= item.name %></strong></p>
      <p><%= item.description %></p>
    </div>
    <%= link_to "done", "order_items", class: " btn btn-primary rounded-4 ", style:"height:63px, width: 62px" %>
    <%= link_to "Prep", "order_items", class: " btn btn-primary rounded-4", style:"height:63px, width: 62px" %>
    <% end %>
  </div>
</div>
