<div class="container livekitchen" data-controller="livekitchen-subscription">
  <div class = "container">
    <div class ="row">
      <h2 class = "mb-4 row justify-content-center">Live Kitchen</h2>
      <%= link_to "Back to dashboard", root_path %>
      <h4>In progress:</h4>
      <div class = "row justify-content-center row flex-row ">
        <% @in_progress_orders.each do |order| %>
          <%= render "livekitchen_card_progress", order: order %>
        <% end %>
      </div>
    </div>
  </div>

  <div class = "container border-top">
    <div class ="row">
      <h4>Up next:</h4>
      <div class = "row justify-content-center row flex-row" data-livekitchen-subscription-target="orders">
        <% @pending_orders.each do |order| %>
          <%= render "livekitchen_card_pending", order: order %>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to "Finished orders", completed_orders_path, class: "btn btn-warning" %>
</div>
