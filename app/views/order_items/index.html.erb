<div class = "container">
  <div class ="row">
    <h2 class = "mb-4 row justify-content-center">Live Kitchen</h2>
    <%= link_to "Back to dashboard", root_path %>
    <h4>In progress:</h4>
    <div class = "row justify-content-center row flex-row ">
        <% @in_progress_orders.each do |order| %>
      <%= render "live_kitchen_card", order: order %>
        <div class="col-3">
          <%= button_to "Done", order_path(order), method: :patch, class: " btn btn-primary rounded-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class = "container border-top">
  <div class ="row">
    <h4>Up next:</h4>
    <div class = "row justify-content-center row flex-row ">
      <% @pending_orders.each do |order| %>
        <%= render "live_kitchen_card", order: order %>
        <div class="col-3">
          <%= button_to "Prep", order_path(order), method: :patch, class: " btn btn-primary rounded-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class = "container border-top">
  <div class ="row">
    <h4>Already cooked:</h4>
    <div class = "row justify-content-center row flex-row ">
      <% @delivered_orders.each do |order| %>
        <%= render "live_kitchen_card", order: order %>
      <% end %>
    </div>
  </div>
</div>
